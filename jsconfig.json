{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "allowJs": true,
    "checkJs": false,
    "noEmit": true,

    "types": ["react", "react-dom"],
    "skipLibCheck": true
  },
  "include": ["src", "vite.config.js"],
  "exclude": ["node_modules", "dist"]
}
